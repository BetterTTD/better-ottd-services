<div class="modal fade show" id="tgModal"
     style="display:block; background-color: rgba(10,10,10,.8);"
     aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Title</h4>
                <button type="button" class="close" @onclick="@ModalCancel">&times;</button>
            </div>
            <div class="modal-body">
                @ChildContent
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" @onclick="@ModalOk">OK</button>
            </div>
        </div>
    </div>
</div>
 
@code {
    [Parameter]
    public string? Title { get; init; }
 
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    [Parameter]
    public EventCallback<bool> OnClose { get; set; }
    
    private Task ModalCancel() => OnClose.InvokeAsync(false);
    
    private Task ModalOk() => OnClose.InvokeAsync(true);
}